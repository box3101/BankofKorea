---
import  menu from '../menu.js';

let subItems = true;
---

<div class="gnb-wrap">
  <ul class="gnb" id="gnb" tabindex="0">
    <div class="all-menu">
      <a href="#">
        <span>전체메뉴</span>
      </a>
    </div>
    {
      menu.map(function ({ category, title, items }) {
        return (
          <li class="gnbItem">
            <a href="#none" class="gnbLink">
              <span>{title}</span>
            </a>
            <ul class="subMenu">
              {items.map(function ({ url, title, subItems }) {
                return (
                  <li>
                    <a href={`../${category}/${url}.html`}>{title}</a>
                    {subItems && (
                      <ul class="subSubMenu">
                        {subItems.map(function ({ url, title }) {
                          return (
                            <li>
                              <a href={`../${category}/${url}.html`}>{title}</a>
                            </li>
                          );
                        })}
                      </ul>
                    )}
                  </li>
                );
              })}
            </ul>
          </li>
        );
      })
    }
  </ul>
</div>
